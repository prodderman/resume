@import '~global/vars.styl'

.resume
  &__personal
    padding-top 0.75rem
    padding-left 0.95rem

    @media (max-width 991px)
      padding-left 0
      padding-top 0
  
  &__section
    margin-bottom 3.1rem

  &__section-header
    margin-bottom 1.6rem

  &__contact
    margin-bottom 1.4rem
        
  &__skill 
    margin-bottom 1rem

  &__software
    width 45%
    margin-bottom 1.25rem
  
    @media (max-width 480px)
      width 100%

  &__software-container
    display flex
    flex-wrap wrap
    justify-content space-between
    width 100%