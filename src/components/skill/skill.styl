@import '~global/colors.styl';

.skill
  display flex
  flex-wrap wrap
  justify-content space-around

  &__title
    font-size 1.56rem
    text-transform uppercase
    color black
    margin-bottom 0.625rem
    text-align center

  &__range
    display flex
    justify-content space-around
    align-items center
    width 80%

    @media (max-width 380px)
      width 100%

  &__point
    width 1.125rem
    height 1.125rem
    border-radius 50%
    background-color $color_gray

    &_filled
      background-color $color_blue
