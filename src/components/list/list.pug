mixin list()
  ul.list
    block

mixin list-item(title, date, place, altColor = false)
  -  let classes = ''
  -  classes += altColor ? ` list-item_altcolor` : ''
  li.list-item(class=classes)
    .list-item__header
      .list-item__title= title
      .list-item__date= `${date}`
      .list-item__place= place
    .list-item__content
      p.list-item__text
        block