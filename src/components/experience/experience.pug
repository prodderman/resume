include ../title/title
include ../list-item/list-item

mixin experience(items = [])
  .experience
    .experience__header
      +title({text: "experience", img: "experience.png", alt: "experience"})
    .experience__list
      each item in items
        .experience__list-item
          +list-item({title: item.title, 
                      date: item.date, 
                      place: item.place, 
                      text: item.text,
                      altColor: false})